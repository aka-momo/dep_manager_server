.col-md-12.col-md-offset-1
  .panel.panel-default.panel-table
    .panel-heading
      .row
        .col.col-xs-6
          %h3.panel-title Packages
        .col.col-xs-6.text-right
          = link_to 'Add New +', new_package_path, remote: true , class: "btn btn-sm btn-primary btn-create"
    .panel-body
      %table.table.table-striped.table-bordered.table-list
        %thead
          %tr
            %th
              %em.fa.fa-cog
            %th Name
            %th Language
            %th Source
            %th Dependencies
        %tbody#packages-table
          - @packages.each do |package|
            = render package
        = paginate @packages, left: 1, right: 3

